NAME = libft.a

CC = gcc
CFLAGS = -Wall -Wextra -Werror
AR = ar -rcs
RM = rm -f

SRCS = ft_bzero.c ft_calloc.c ft_strlen.c ft_strjoin.c ft_itoa.c ft_strdup.c ft_strlcpy.c ft_substr.c ft_strncmp.c
OBJS = $(SRCS:.c=.o)

all : $(NAME)

$(NAME) : $(OBJS)
	${AR} $@ $^

%.o : %.c
	$(CC) $(FLAGS) -c $< -o $@
	
clean : 
	$(RM) $(OBJS) $(B_OBJS)

fclean : clean
	$(RM) $(NAME)

re :
	make fclean
	make all

.PHONY : all clean fclean re bonus
